<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>What Todo?</title>
        <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> -->
        <link rel="stylesheet" href="app.css">
    </head>
    <body>
       
<section>
    <header id="heading"><h1>What Todo?</h1></header>
</section>
        <!-- Todo container -->

        <div class="todo-container">
            <div class="current" id="no_current">
                <h1>No status</h1>
                <form method="post" action="/todo/add">
                    <textarea name="newtodo" id="newtodo" cols="20" rows="1" placeholder="Add something.."></textarea>
                    <button class="btn">Add</button>
                </form>
                <!-- //dragging and appending -->
                <% for(let init of todoinit){ %> 
                    <h3 id="name"><%= init.name %></h3> 
                    <form method="post" action="/todo/todoinit/delete/<%= init.id %>/?_method=delete">
                        <button class="close">&times</button>
                    </form> 
                <div class="todo" draggable="true">
                    
                        <form method="post" action="/todo/todoinit/<%=init.id%>">
                            <div class="switch-field">   
                               
                            <input type="radio" id="radio-three" name="todo" value="yet" class="radio">
                            <label for="radio-three">Yet</label>
                            <input type="radio" id="radio-four" name="todo" value="partial">
                            <label for="radio-four">partial</label>
                            <input type="radio" id="radio-five" name="todo" value="complete">
                            <label for="radio-five">complete</label>
                            </div>
                          <button class="btn">Upgrade</button>
                        </form>
                </div>
                <% } %>

            </div>
            <div class="current" id="yet">
                <h1>Yet to start</h1>
                <% for(let init of todoyet){ %> 
                    <h3>
                        <%= init.name %> 
                    </h3>
                    <form method="post" action="/todo/todoyet/delete/<%= init.id %>/?_method=delete">
                        <button class="close">&times</button>
                    </form>
                    <div class="todo" draggable="true">
                        
                        
                        <form method="post" action="/todo/todoyet/<%=init.id%>">
                            <div class="switch-field"> 
                                <input type="radio" id="partial" name="todo" value="partial">
                                <label for="partial" class="radio">partial</label>
                                <input type="radio" id="complete" name="todo" value="complete">
                                <label class="radio" for="complete">complete</label>
                              </div>
                              <button class="btn">Upgrade</button>
                        </form>
                    </div>
                    <% } %>
            </div>
            <div class="current" id="progress">
                <h1>In progress</h1>
                <% for(let init of todostart){ %> 
                    <h3><%= init.name %> </h3>
                    <form method="post" action="/todo/todostart/delete/<%= init.id %>/?_method=delete">
                        <button class="close">&times</button>
                    </form>
                    <div class="todo" draggable="true">
                        
                        
                        <form method="post" action="/todo/todostart/<%=init.id%>">
                            <div class="switch-field"> 
                                <input type="radio" id="complete" name="todo" value="complete">
                                <label class="radio" for="complete">complete</label>
                              </div> 
                              <button class="btn">Upgrade</button>
                        </form>
                    </div>
                    <% } %>
            </div>
            <div class="current" id="completed">
                <h1>completed</h1>
                <% for(let init of todocomp){ %> 
                    
                    <div class="todo" draggable="true">
                        <h3><%= init.name %> </h3>
                        <form method="post" action="/todo/todocomp/delete/<%= init.id %>/?_method=delete">
                            <button class="close">&times</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>
        <div id="overlay"></div>
    </body>
</html>